<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arealbreakfast.smashtools.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/s4IMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/smash4imicon2"
        android:onClick="Smash4IM" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/s4IMButton"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text="Smash 4 ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/mIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/meleeimicon"
        android:onClick="MeleeIM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/mIMButton"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:text="Melee ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


    <Button
        android:id="@+id/pmIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/s4IMButton"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/pmicon"
        android:onClick="ProjectMIM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pmIMButton"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:text="PM ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/bIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/mIMButton"
        android:layout_marginRight="25dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/brawlicon"
        android:onClick="BrawlIM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/bIMButton"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:text="Brawl ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />
    <Button
        android:id="@+id/sfIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/mIMButton"
        android:layout_marginRight="140dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/sficon"
        android:onClick="BrawlIM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sfIMButton"
        android:layout_marginRight="150dp"
        android:layout_marginTop="5dp"
        android:text="64 ironman"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:textSize="15sp" />


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4831792107942934/2112664892">

    </com.google.android.gms.ads.AdView>


</RelativeLayout>