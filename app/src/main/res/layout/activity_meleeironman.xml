<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    >








    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Character #:"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/mimnumber_char_title"
        />



    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/mimnumber_char"
        android:text="5"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/mimnumber_char_title"
        android:layout_alignBottom="@+id/mimnumber_char_title"
        android:layout_marginLeft="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player #:"
        android:id="@+id/mimnumber_play_title"
        android:layout_below="@id/mimnumber_char_title"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="60dp"
        />

    <EditText
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/mimnumber_play"
        android:text="2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/mimnumber_play_title"
        android:layout_alignBottom="@+id/mimnumber_play_title"
        android:layout_marginLeft="53dp"
        />




    <Button
        android:id="@+id/mimstart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mimnumber_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:onClick="Start"
        android:text="Start" />






</RelativeLayout>