<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context="com.arealbreakfast.smashtools.ProjectMIronMan">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:id="@+id/toolbartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="4dp"
            android:text="Project M Ironman"
            android:textColor="#ffffff"
            android:textSize="22sp" />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/pmimnumber_char_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="110dp"
        android:text="Character #:"
        android:textSize="25sp" />


    <ImageButton
        android:id="@+id/increase_char"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/pmimnumber_char"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="246dp"
        android:src="@drawable/ic_action_name" />


    <TextView
        android:id="@+id/pmimnumber_char"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pmimnumber_char_title"
        android:layout_alignBottom="@+id/pmimnumber_char_title"
        android:layout_marginLeft="254dp"
        android:text="5"
        android:textSize="25sp" />


    <ImageButton
        android:id="@+id/decrease_char"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pmimnumber_char"
        android:layout_marginLeft="246dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/arrow_down" />


    <TextView
        android:id="@+id/pmimnumber_play_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pmimnumber_char_title"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="110dp"
        android:text="Player #:"
        android:textSize="25sp" />


    <ImageButton
        android:id="@+id/increase_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_above="@+id/pmimnumber_play"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="246dp"
        android:src="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/pmimnumber_play"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pmimnumber_play_title"
        android:layout_alignStart="@+id/pmimnumber_char"
        android:inputType="number"
        android:text="2"
        android:textSize="25sp" />


    <ImageButton
        android:id="@+id/decrease_play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pmimnumber_play"
        android:layout_marginLeft="246dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/arrow_down" />


    <Button
        android:id="@+id/pmimstart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pmimnumber_play"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:onClick="Start"
        android:text="Start Random" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Manually"
        android:layout_below="@+id/pmimstart_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:onClick="ManualEnter"
        android:id="@+id/button2" />


    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4831792107942934/4018828840"> </com.google.android.gms.ads.AdView>


</RelativeLayout>

