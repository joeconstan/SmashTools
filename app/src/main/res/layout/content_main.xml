<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arealbreakfast.smashtools.MainActivity"
    tools:showIn="@layout/app_bar_main">




    <Button
        android:id="@+id/s4IMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="Smash4IM"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/smash4imicon2"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Smash 4 ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/s4IMButton"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/mIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:onClick="MeleeIM"
        android:background="@drawable/meleeimicon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melee ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/mIMButton"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        />


    <Button
        android:id="@+id/pmIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/s4IMButton"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="60dp"
        android:onClick="ProjectMIM"
        android:background="@drawable/pmicon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/pmIMButton"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/bIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_below="@id/mIMButton"
        android:onClick="BrawlIM"
        android:background="@drawable/brawlicon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brawl ironman"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_below="@+id/pmIMButton"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="10dp"
        />




    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4831792107942934/2112664892">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
