<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arealbreakfast.smashtools.MainActivity"
    tools:showIn="@layout/app_bar_main">




    <Button
        android:id="@+id/s4IMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="Smash4IM"
        android:text="Smash 4 Iron Man"
        android:textSize="20dp"
        android:background="@drawable/smashfourbackground"
        />

    <Button
        android:id="@+id/mIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/s4IMButton"
        android:layout_marginTop="5dp"
        android:onClick="MeleeIM"
        android:text="Melee Iron Man"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:background="@drawable/meleebackground"
        />


</RelativeLayout>
