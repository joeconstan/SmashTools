<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arealbreakfast.smashtools.MainActivity"
    tools:showIn="@layout/app_bar_main">




    <Button
        android:id="@+id/s4IMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="Smash4IM"
        android:text="Smash 4 Iron Man"
        android:textSize="30dp"
        android:background="@drawable/smashfourbackground"
        />

    <Button
        android:id="@+id/mIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/s4IMButton"
        android:layout_marginTop="5dp"
        android:onClick="MeleeIM"
        android:text="Melee Iron Man"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:background="@drawable/meleebackground"
        />


    <Button
        android:id="@+id/pmIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/mIMButton"
        android:layout_marginTop="5dp"
        android:onClick="ProjectMIM"
        android:text="Project M Iron Man"
        android:textSize="30dp"
        android:background="@drawable/pmbackground"
        />

    <Button
        android:id="@+id/bIMButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/pmIMButton"
        android:layout_marginTop="5dp"
        android:onClick="BrawlIM"
        android:text="Brawl Iron Man"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:background="@drawable/meleebackground"
        />




    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4831792107942934/2112664892">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
