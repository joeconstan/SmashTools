<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Number of characters"
        android:inputType="number"
        android:id="@+id/s4imnumber_char"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exclude characters"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/s4imnumber_char"
        android:id="@+id/s4imexclude_button"
        android:onClick="Exclude"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/s4imexclude_button"
        android:id="@+id/s4imstart_button"
        android:text="Start"
        android:onClick="Start"
        />



</RelativeLayout>